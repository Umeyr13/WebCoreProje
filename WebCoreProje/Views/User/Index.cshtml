@model IEnumerable<WebCoreProje.Models.ViewModel.UserModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfilImagefileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aktivate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/Resim/@item.ProfilImagefileName" alt="" height="50" />           
                @* @Html.DisplayFor(modelItem => item.ProfilImagefileName)*@
            
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @if (item.Aktivate)
                    {
                     <i class="fa fa-check text-success"></i>
                    }
                    else
                    {
                        <i class="fa fa-times text-danger"></i>
                    }
               @* @Html.DisplayFor(modelItem => item.Aktivate)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
         
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-info btn-sm"> <i class="fa fa-edit"></i> Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning btn-sm"  onclick="return confirm('Silmek istediğinize emin misiniz?')"><i class="fa fa-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-info btn-sm" asp-action="Create"> <i class="fa fa-user-plus"></i> Yeni Kullanıcı </a>