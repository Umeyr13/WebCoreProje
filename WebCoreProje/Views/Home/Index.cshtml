@{
    ViewData["Title"] = "Home Page";
}


<main>
    <div class="container">
    <div class="row">
        <section >
                <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
                    <div class="carousel-inner" width="300" height="300" >
                        <div class="carousel-item active">
                            <img src="https://picsum.photos/200/300?random=1" class="d-block w-100" alt="..."  height="400">
                        </div>
                        <div class="carousel-item">
                            <img src="https://picsum.photos/200/300?random=2" class="d-block w-100" alt="..." height="400">
                        </div>
                        <div class="carousel-item">
                            <img src="https://picsum.photos/200/300?random=3" class="d-block w-100" alt="..." height="400">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
         
           
 
        </section>


    </div>
</div>

</main>


                